@model MvcFlight.Models.Flight

@{
    ViewBag.Title = "删除航班";
}

<h2>删除航班</h2>

<h3>你确定要删除此航班？</h3>
<fieldset>
    <div class="display-label">航班班次</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FlightName)
    </div>

    <div class="display-label">起点</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Start)
    </div>

    <div class="display-label">终点</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Destination)
    </div>

    <div class="display-label">起飞时间</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.StartTime)
    </div>

    <div class="display-label">到达时间</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EndTime)
    </div>

    <div class="display-label">价格</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.price)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="确认" /> |
        @Html.ActionLink("返回列表", "Index")
    </p>
}
