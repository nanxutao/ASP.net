@using Webdiyer.WebControls.Mvc;
@model PagedList<VBlog.Models.GuestBook>

@{
    ViewBag.Title = "留言列表";
}
<h5>
    留言博客
</h5>
<div class = "list">
    <ul>
    @foreach (var m in Model)
    {<div class = 'gbook'>@m.Nickname<span>/@m.AddDate</span></div>
        <div class = 'gbook2'>@m.Message</div>
        if (m.Reply != null) 
        { 
            <fieldset style="border:#cccccc solid 1px; margin-bottem:5px; margin-top:3px">
           <legend style="margin-left:20px; color:#f00">回复:&nbsp;@m.Nickname</legend>
            <div class = "gbook_r">@m.Reply</div>
            </fieldset>
        }
     }
    </ul>
 </div>
 
 @Html.Pager(Model)
 </br>
 </br>
 </br>
 <div class = "gbook2">
 @using (Html.BeginForm())
 {
     <tabel width="500" border="0" cellspacing="1" cellpadding="1">
     <tr>
     <td width = "80" align="center">
        昵&nbsp;&nbsp;称:
     </td>
     <td>
        <input type="text" name="nickName" value="@ViewBag.Nickname">
        @Html.ValidationMessage("nickname")
     </td>
     </tr>
     <tr>
        <td align="center">
        内&nbsp;&nbsp;容
        </td>
        <td>
        <textarea cols="50" rows="6" name="message">
        @ViewBag.Message</textarea><br/>
        @Html.ValidationMessage("_mvcCaptchaText")
     </td>
     </tr>
     <tr>
     <td>
     </td>
     <td>
     <input type="submit" value="留言">
     </td>
     </tr>
     </tabel>
     
      
 }
 </div>

